# Django secret key (generate a strong one for production)
SECRET_KEY=your-secret-key-here

# Debug mode: set to False in production
DEBUG=True

# Allowed hosts (comma-separated). e.g. localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# MySQL database settings
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_mysql_host_or_ip
DB_PORT=3306

# JWT settings (token lifetime in seconds â€” optional override)
ACCESS_TOKEN_LIFETIME=3600

# Optional: Django admin email (for initial admin user)
ADMIN_EMAIL=admin@example.com
